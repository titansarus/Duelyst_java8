<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Duelyst.Controllers.LoginController">
   <children>
      <AnchorPane prefHeight="602.0" prefWidth="1024.0" style="-fx-background-image: url('/res/Backgrounds/backlogin.jpg'); -fx-background-color: LIGHTGREEN; -fx-background-size: 1024 602;">
         <children>
            <JFXButton buttonType="RAISED" layoutX="188.0" layoutY="301.0" onAction="#handleSignUpBtn" style="-fx-background-color: #02263e; -fx-opacity: 0.7;" text="Sign Up" textFill="#b6e4fc">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <ripplerFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop color="#4eb4e5" />
                        <Stop color="#4eb4e5" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </ripplerFill>
            </JFXButton>
             
            <JFXButton buttonType="RAISED" layoutX="80.0" layoutY="301.0" onAction="#handleLoginBtn" style="-fx-background-color: #02263e; -fx-opacity: 0.7;" text="Login" textFill="#b6e4fc">
               <ripplerFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop color="#4eb4e5" />
                        <Stop color="#4eb4e5" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </ripplerFill>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </JFXButton>
            <JFXTextField fx:id="username_tf" focusColor="#fbd951" layoutX="80.0" layoutY="189.0" promptText="Username" style="-fx-text-fill: WHITE; -fx-opacity: 0.5; -fx-background-color: rgba(0,0,0,1);" unFocusColor="#06416b" />
            <JFXPasswordField fx:id="password_tf" focusColor="#fbd951" layoutX="80.0" layoutY="236.0" promptText="Password" style="-fx-text-fill: WHITE; -fx-background-color: BLACK; -fx-opacity: 0.5;" unFocusColor="#06416b" />
            <Label layoutX="4.0" layoutY="194.0" style="-fx-opacity: 1; -fx-background-radius: 5 5 5 5; -fx-border-radius: 5 5 5 5; -fx-font-family: Averta Demo PE Cutted Demo;" text="Username" textFill="#06436f" />
            <Label layoutX="4.0" layoutY="241.0" style="-fx-opacity: 1; -fx-background-radius: 5 5 5 5; -fx-border-radius: 5 5 5 5; -fx-font-family: Averta Demo PE Cutted Demo;" text="Password" textFill="#06436f" />
            <JFXButton buttonType="RAISED" layoutX="684.0" layoutY="548.0" onAction="#handleGoToMainMenu" prefHeight="25.0" prefWidth="168.0" style="-fx-background-color: #02263e; -fx-opacity: 0.7;" text="Go To Main Menu" textFill="#b6e4fc">
               <ripplerFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop color="#4eb4e5" />
                        <Stop color="#4eb4e5" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </ripplerFill>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="900.0" layoutY="545.0" onAction="#handleExit" prefHeight="21.0" prefWidth="44.0" style="-fx-background-color: #02263e; -fx-opacity: 0.7;" text="exit" textFill="#b6e4fc">
               <ripplerFill>
                  <RadialGradient centerX="1.0" cycleMethod="REFLECT" radius="0.5">
                     <stops>
                        <Stop color="#4eb4e5" />
                        <Stop color="#4eb4e5" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </ripplerFill>
            </JFXButton>
         </children>
      </AnchorPane> 
   </children>
</StackPane>
